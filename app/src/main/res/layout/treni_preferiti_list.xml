<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_treniPreferiti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foregroundTint="@color/material_dynamic_neutral70"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout_treniPreferiti_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout_treniPreferiti_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_tipoTreno"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_directions_transit_24" />

                <TextView
                    android:id="@+id/textView_numeroTreno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="10dp"
                    android:text="Numero Treno" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10dp"
                android:background="@color/material_dynamic_neutral90" />

            <LinearLayout
                android:id="@+id/linearLayout_treniPreferiti_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_stazionePartenza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stazione Partenza" />

                <TextView
                    android:id="@+id/textView_orarioPartenza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orario Partenza"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_treniPreferiti_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_stazioneArrivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stazione Arrivo" />

                <TextView
                    android:id="@+id/textView_orarioArrivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orario Arrivo"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>